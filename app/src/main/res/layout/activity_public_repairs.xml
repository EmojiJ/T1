<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.Public_repairs">
    <TextView
        android:text="您的联系信息"
        android:gravity="center_vertical"
        android:textColor="@color/colorBlue"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <View  android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="#66CCFF"
        />
    <!--    联系人-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="联系人："
            android:gravity="center"
            android:textSize="@dimen/repairsInformation"
            />
        <EditText
            android:id="@+id/et_userName_pub"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            />
    </LinearLayout>
    <View  android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="#66CCFF"
        />
    <!--    联系电话-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="联系电话："
            android:gravity="center"
            android:textSize="@dimen/repairsInformation"
            />
        <EditText
            android:id="@+id/et_phoneNumber_pub"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            />
    </LinearLayout>
    <View  android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="#66CCFF"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="所在区域："
            android:gravity="center"
            android:textSize="@dimen/repairsInformation"
            />
        <EditText
            android:id="@+id/et_position_pub"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            />
    </LinearLayout>
    <View  android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="#66CCFF"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="您的故障内容"
        android:textColor="#66CCFF"
        android:gravity="center"
        android:textSize="@dimen/repairsInformation"
        />
    <View  android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="#66CCFF"
        />
    <TextView
        android:text="故障报修"
        android:textSize="18sp"
        android:textColor="@color/colorBlue"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <EditText
        android:id="@+id/et_problem_pub"
        android:hint="请详细描述故障的发生地点、情况、现场图片等"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@null"
        />
    <View  android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="#66CCFF"
        />
    <Button
        android:id="@+id/publicRepairsSubmit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="提交"
        android:textColor="#FFFFFF"
        android:background="@color/colorBlue"
        android:onClick="submitRepairs"
        />
</LinearLayout>