<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.Room_repairs">
<!--    所在楼栋-->
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <TextView
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="所在楼栋:"
        android:gravity="center"
        android:textSize="@dimen/repairsInformation"
        />
    <Spinner
        android:id="@+id/buildings"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
</LinearLayout>
    <View  android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="#66CCFF"
        />
<!--    所在楼层-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="所在楼层:"
            android:gravity="center"
            android:textSize="@dimen/repairsInformation"
            />
        <Spinner
            android:id="@+id/floors"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
    </LinearLayout>
    <View  android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="#66CCFF"
        />
<!--    所在房间-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="所在房间:"
            android:gravity="center"
            android:textSize="@dimen/repairsInformation"
            />
        <Spinner
            android:id="@+id/rooms"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
    </LinearLayout>
    <View  android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="#66CCFF"
        />
<!--    联系人-->
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    >
    <TextView
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="联系人："
        android:gravity="center"
        android:textSize="@dimen/repairsInformation"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@null"
        />
</LinearLayout>
    <View  android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="#66CCFF"
        />
<!--    联系电话-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="联系电话："
            android:gravity="center"
            android:textSize="@dimen/repairsInformation"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            />
    </LinearLayout>
    <View  android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="#66CCFF"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="您的故障内容"
        android:textColor="#66CCFF"
        android:gravity="center"
        android:textSize="@dimen/repairsInformation"
        />
    <View  android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="#66CCFF"
        />
    <!--    报修类型-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="报修类型:"
            android:gravity="center"
            android:textSize="@dimen/repairsInformation"
            />
        <Spinner
            android:id="@+id/repairs_types"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
    </LinearLayout>
    <View  android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="#66CCFF"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@null"
        android:hint="请详细描述故障的具体表现（100字以内）"
        android:gravity="left"
        />
    <View  android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="#66CCFF"
        />
    <Button
        android:id="@+id/roomRepairsSumbit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="提交"
        android:textColor="#FFFFFF"
        android:background="@color/colorBlue"
        />
</LinearLayout>